# =============================================
# WhatsAI - Environment Variables Template
# =============================================
# Copy this file to .env.local and fill in your values

# =============================================
# SUPABASE (Required)
# =============================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================
# OPENAI (Required for AI responses)
# =============================================
# Get this from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# =============================================
# CINETPAY (Required for payments)
# =============================================
# Get these from: https://my.cinetpay.com/
CINETPAY_SITE_ID=your-site-id
CINETPAY_API_KEY=your-api-key
CINETPAY_SECRET_KEY=your-secret-key
# Set to 'sandbox' for testing, 'live' for production
CINETPAY_MODE=sandbox

# =============================================
# APP CONFIGURATION
# =============================================
# Your app URL (without trailing slash)
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=WhatsAI

# =============================================
# WHATSAPP SESSIONS (Optional)
# =============================================
# Directory to store WhatsApp sessions
# Default is ./.whatsapp-sessions
WHATSAPP_SESSION_PATH=./.whatsapp-sessions

# =============================================
# EMAIL (Optional - for transactional emails)
# =============================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@whatsai.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_NAME=WhatsAI
SMTP_FROM_EMAIL=noreply@whatsai.com

# =============================================
# ANALYTICS (Optional)
# =============================================
# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# =============================================
# ADDITIONAL SERVICES (Optional)
# =============================================
# Sentry for error tracking
SENTRY_DSN=your-sentry-dsn

# =============================================
# DEPLOYMENT
# =============================================
# Set to 'production' in production environment
NODE_ENV=development
