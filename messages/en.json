        "items": {
            "howItWorks": {
                "question": "How does WazzapAI work?",
                "answer": "WazzapAI connects to your WhatsApp via QR code (like WhatsApp Web). Once connected, our AI analyzes incoming messages and generates personalized responses based on your instructions. Everything is automatic and real-time.",
                "category": "General"
            },
            "banRisk": {
                "question": "Can WhatsApp ban me?",
                "answer": "Our system uses Baileys, a proven solution imitating human behavior. By following best practices (response delays, personalization), the risk is minimal. Thousands of active users without issues.",
                "category": "Security"
            },
            "freeTest": {
                "question": "Can I test for free?",
                "answer": "Absolutely! Create an account and get 100 free credits to test all features. No credit card required. Upgrade to a paid plan when you're ready.",
                "category": "General"
            },
            "credits": {
                "question": "How does the credit system work?",
                "answer": "1 credit = 1 message sent by AI. Incoming messages do not consume credits. Your credits renew every month depending on your plan.",
                "category": "Billing"
            },
            "multiNumber": {
                "question": "Can I use multiple WhatsApp numbers?",
                "answer": "Yes! The number of numbers depends on your plan. Starter: 1, Pro: 2, Business: 4. Each number can have its own AI agent with different instructions.",
                "category": "Features"
            },
            "appointments": {
                "question": "Can AI take appointments?",
                "answer": "Yes! Configure your agent to collect information and propose slots. Integration with Google Calendar is available on Pro and Business plans.",
                "category": "Features"
            },
            "security": {
                "question": "Are my data secure?",
                "answer": "Absolutely. End-to-end encryption, sessions stored securely, and GDPR compliance. We never read your conversations.",
                "category": "Security"
            },
            "cancel": {
                "question": "Can I cancel anytime?",
                "answer": "Yes, no commitment! Cancel your subscription anytime from your dashboard. Your remaining credits are usable until the end of the period.",
                "category": "Billing"
            }
        }
    },
