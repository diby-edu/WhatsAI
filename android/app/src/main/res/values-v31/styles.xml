<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Android 12+ Splash Screen Theme -->
    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
        <!-- Background color of splash screen -->
        <item name="windowSplashScreenBackground">#0f172a</item>
        <!-- Icon displayed in center of splash screen -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <!-- Icon background (circular on Android 12+) -->
        <item name="windowSplashScreenIconBackgroundColor">#10b981</item>
        <!-- Duration to keep splash visible -->
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <!-- Theme to apply after splash -->
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>
</resources>
